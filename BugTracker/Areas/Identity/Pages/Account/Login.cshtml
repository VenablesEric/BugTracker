@page
@model LoginModel

@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Identity
@inject SignInManager<BugTrackerUser> SignInManager


@{
    ViewData["Title"] = "Log in";
}

@if (SignInManager.IsSignedIn(User))
{
    Response.Redirect("/Home");
}

<div class="text-center vh-100 d-flex" style="background-color:#808080; align-items: center;">
    <div class="text-center rounded-5 shadow bg-light p-3 w-100" style="max-width:420px; margin: 0 auto;">

        <form id="account" method="post">
            <h1 class="h3 mb-3 fw-normal">Bug Tracker</h1>
            <h1 class="h3 mb-3 fw-normal">Sign In</h1>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email" class="sr-only"></label>
                <input asp-for="Input.Email" class="form-control" placeholder="Email address" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password" class="sr-only"></label>
                <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
            </div>
        </form>
        <hr class="my-4">
        <small class="text-muted">
            <p>Forgot your <a asp-action="ForgotPassword" asp-controller="Settings">Password?</a></p>
            <p>Create an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a></p>
            <p>Sign in as a  <a asp-action="DemoUserLogin" asp-controller="Settings">Demo User</a></p>
        </small>
    </div>

    @section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
</div>
