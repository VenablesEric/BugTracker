@model SettingsModel
@using Microsoft.AspNetCore.Identity
@using BugTracker.Areas.Identity.Data

@inject UserManager<BugTrackerUser> UserManager

@{
    ViewData["Title"] = "Settings";
    Layout = "_Navigation";
}

<div class="container-fluid">
    <div class="m-3">
        <div class="card p-3 mb-2">
            <h1>Settings</h1>
            <h5>User: @UserManager.GetUserName(User)</h5>
            <h5>Role: @Model.Role</h5>
        </div>
        <div>
            <hr />


            <div class="row">
                <div class="col-md-6">
                    <div class="card p-3 mb-2">
                        <h2>Change Password</h2>
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="CurrentPassword"></label>
                                <input asp-for="CurrentPassword" class="form-control" />
                                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NewPassword"></label>
                                <input asp-for="NewPassword" class="form-control" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword"></label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Update</button>
                        </form>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card p-3 mb-2">
                        <h2>Delete Account</h2>
                        <form asp-action="DeleteUser" asp-route-id="@UserManager.GetUserId(User)" method="post">
                            <button type="submit" class="btn btn-danger mt-2"
                                    onclick="return confirm('Delete your account?')">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>